%h1 Clubs#edit

= form_for(@club) do |f|

  = f.label :name
  = f.text_field :name

  %br 

  = f.label :badge_url
  = f.text_field :badge_url

  %br 

  = f.label :colour_hex
  = f.text_field :colour_hex

  %br   

  = f.grouped_collection_select :place_id, Country.all, :places, :name, :id, :name, {}, {:id => 'place_select'}

  %br

  = f.submit "Edit " + @club.name, class: "btn btn-large btn-primary"



