%h1 Clubs#new

= form_for(@club) do |f|

  = f.label :name
  = f.text_field :name

  %br 

  = f.label :badge_url
  = f.text_field :badge_url

  %br 

  = f.label :colour_hex
  = f.text_field :colour_hex

  %br   

  / = f.label :country_id
  / = f.collection_select :country_id, @countries, :id, :name

  / %br

  / WORKS:
  = f.grouped_collection_select :place_id, Country.all, :places, :name, :id, :name, {}, {:id => 'place_select'}

  / = f.collection_select :country_id, Country.all, :id, :name, {}, {:multiple => true, :id => 'country_select'} 
  / = f.grouped_collection_select :place_id, Country.all, :places, :name, :id, :name, {}, {:id => 'place_select'}


  / = f.label :place_id
  / = f.collection_select :place_id, @places, :id, :name

  %br

  = f.submit "Add a club", class: "btn btn-large btn-primary"


