%h1 Stints#new

= form_for(@stint) do |f|

  = f.label :person_id
  = f.collection_select :person_id, @people, :id, :last_name  

  = f.label :role_id
  = f.collection_select :role_id, @roles, :id, :name

  %br 

  = f.label :join_date
  = f.select :join_date, 1950..(Time.zone.now.year)

  %br 

  = f.label :leave_date
  = f.select :leave_date, 1950..(Time.zone.now.year)

  %br 

  %fieldset

    = f.label :is_permanent, "Permanent signing?"
    = f.check_box :is_permanent, {checked: true}

    %br

    = f.label :is_one_of_our_own
    = f.check_box :is_one_of_our_own

    or 

    = f.label :from, "from"
    = f.collection_select :from, @clubs, :id, :name, include_blank: true

    = f.label :bought_fee, "fee?"
    = f.text_field :bought_fee

  
  %fieldset

    = f.label :sold_to
    = f.collection_select :sold_to, @clubs, :id, :name, include_blank: true 

    = f.label :sold_fee
    = f.text_field :sold_fee


  %br

  = f.submit "Add a stint", class: "btn btn-large btn-primary"
